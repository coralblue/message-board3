<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

  <div class="panel-body">
    <% @messages.each do |message| %>
    <div class="form-group"> <div class="control-label col-sm-1 "><span class="label label-default">年齢</span><%= message.age %></div>
    <div class="form-group"> <div class="control-label col-sm-1 "><span class="label label-info">名前</span><%= message.name %></div>
    <div class="form-group"> <div class="control-label col-sm-2 "><span class="label label-warning">内容</span><%= message.body %></div>
     <!--<%= text_area_tag 'page[message]' %>-->
    <div class="form-group"> <div class="control-label col-sm-1, col-sm-2">(<%= link_to "edit" , edit_message_path(message) %>/
    <%= link_to "delete" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>)</div>
        
      <br>
      　</div>  
    <% end %>
  </div>
</div>

<%= render 'form' %>